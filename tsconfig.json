{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["./"],
  "exclude": ["build", "node_modules"]
}
